local Player = game.Players.LocalPlayer
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "AttackMenu"
ScreenGui.Parent = Player:WaitForChild("PlayerGui")

local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.Position = UDim2.new(0.25, 0, 0.25, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
MainFrame.Parent = ScreenGui

local function createMenu(ButtonName, MenuFrame)
    local Button = Instance.new("TextButton")
    Button.Size = UDim2.new(1, 0, 0.1, 0)
    Button.Text = ButtonName
    Button.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    Button.Parent = MenuFrame

    return Button
end

local function notify(message)
    local NotifyFrame = Instance.new("Frame")
    NotifyFrame.Size = UDim2.new(0.3, 0, 0.1, 0)
    NotifyFrame.Position = UDim2.new(0.7, 0, 0.9, 0)
    NotifyFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    NotifyFrame.BorderSizePixel = 0
    NotifyFrame.Parent = ScreenGui

    local NotifyText = Instance.new("TextLabel")
    NotifyText.Size = UDim2.new(1, 0, 1, 0)
    NotifyText.Text = message
    NotifyText.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    NotifyText.TextColor3 = Color3.fromRGB(255, 255, 255)
    NotifyText.Parent = NotifyFrame

    wait(3)

    NotifyFrame:Destroy()
end

-- ทดสอบการทำงานของ Notify
notify("สคริปต์ทำงานสำเร็จ")

local HomeButton = createMenu("Home", MainFrame)
HomeButton.MouseButton1Click:Connect(function()
    notify("Home Button Clicked")
end)

-- ทดสอบปุ่มอื่น ๆ
local SettingsButton = createMenu("Settings", MainFrame)
SettingsButton.MouseButton1Click:Connect(function()
    notify("Settings Clicked")
end)
